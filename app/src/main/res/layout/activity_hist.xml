<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.homework_teacyclope.HistActivity">

    <LinearLayout
        android:id="@+id/hist_tables"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/hist_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="collOnclick"
            android:background="@mipmap/searchbackbtn"/>

        <TextView
            android:id="@+id/hist_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:text="历史记录"/>

        <Button
            android:id="@+id/hist_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="collOnclick"
            android:background="@mipmap/righttopbutton"/>

    </LinearLayout>

    <ListView
        android:id="@+id/hist_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        />



</LinearLayout>
